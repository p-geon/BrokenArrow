#!/bin/bash

export dir_dotfiles=${HOME}/git/BrokenArrow/dotfiles

cp ${dir_dotfiles}/.bash_aliases ${HOME}/.bash_aliases
echo "[copied] ~/.bash_aliases"
cp ${dir_dotfiles}/.bash_profile ${HOME}/.bash_profile
echo "[copied] ~/.bash_profile"
cp ${dir_dotfiles}/.zprofile ${HOME}/.zprofile
echo "[copied] ~/.zprofile"
cp ${dir_dotfiles}/.zshrc ${HOME}/.zshrc
echo "[copied] ~/.zshrc"
source ~/.bashrc